<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mypc.esports.fragment.UnLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relayout">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#000">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FDD101"
                android:text="圈子"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/bg_no_login" />

        <TextView
            android:id="@+id/tv_unlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="你还没有登录"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlogin"
            android:layout_centerInParent="true"
            android:background="@drawable/unlogin_background"
            android:text="去登陆"
            android:textColor="#fff"
            android:id="@+id/btn_un_login"
            android:textSize="18sp"

            />
    </RelativeLayout>
</FrameLayout>
