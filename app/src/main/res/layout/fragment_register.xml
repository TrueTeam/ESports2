<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android./tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#203284b4"
    android:padding="10dp"
    tools:context="com.example.mypc.esports2.fragment.registe.RegisterFragment">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_accont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/login_account"
        android:drawablePadding="15dp"
        android:hint="手机号"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/et_register_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_register_accont"
        android:drawableLeft="@mipmap/login_password"
        android:drawablePadding="15dp"
        android:hint="验证码"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_register_verification"
        android:drawableLeft="@mipmap/login_password"
        android:drawablePadding="15dp"
        android:hint="密码"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <TextView
        android:id="@+id/tv_register_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_register_verification"
        android:layout_alignParentRight="true"
        android:background="@drawable/vertification_background"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_register_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_register_password"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_background"
        android:text="完成"
        android:textColor="#fff"/>


    <CheckBox
        android:id="@+id/cb_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:text="我已阅读并同意该条款"
        android:textColor="#fff"/>


</RelativeLayout>
