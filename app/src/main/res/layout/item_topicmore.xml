<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#守望先锋朋友使用插件怎么处理"
        android:textSize="20sp"
        android:paddingTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


    <ImageView
        android:id="@+id/imagview_ican"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        />
        <TextView
            android:id="@+id/textview_right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="支持正义"
            android:background="@drawable/find_shape__right"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/textview_left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="支持躺赢"
            android:background="@drawable/find_shape_left"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/textview_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_right"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/textview_count_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/textview_count_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="160dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_left"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>