<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.mypc.esports.ui.TuCaoActivity">
    <RelativeLayout
        android:id="@+id/rl_tucao"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000">
        <ImageView
            android:id="@+id/on_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_arrow_left"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FDD101"
            android:text="我要吐槽"/>
    </RelativeLayout>
    <Spinner
        android:layout_below="@+id/rl_tucao"
        android:layout_margin="20dp"
        android:id="@+id/tu_cao_spi"
        android:background="#fff"
        android:spinnerMode="dropdown"
        android:entries="@array/spinner_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@+id/tu_cao_spi"
        android:layout_margin="20dp"
        android:id="@+id/et_tu_cao"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:hint="请输入你宝贵的意见"
        android:lines="10"
        android:gravity="top"
        android:textColorHint="#999"
        android:background="#fff"
        android:maxLines="20"/>

    <Button

        android:id="@+id/btn_add_team"
        android:text="确认提交"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="#00BEC3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
