<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#203284b4"
    android:padding="10dp"
    tools:context=".fragment.LoginFragment">

    <EditText
        android:id="@+id/et_login_accont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/login_account"
        android:hint="账号"
        android:padding="10dp"
        android:textColor="#fff"
        android:drawablePadding="15dp"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@+id/et_login_accont"
        android:drawableLeft="@mipmap/login_password"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="15dp"
        android:textColorHint="#fff"/>

    <TextView
        android:id="@+id/tv_register_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_login_password"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="忘记密码？"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_password"
        android:layout_margin="10dp"
        android:background="@drawable/login_background"
        android:text="登陆"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <LinearLayout
        android:id="@+id/ll_login_sepreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login_login"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷登陆"
            android:textColor="#999"
            android:textSize="20sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#999"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login_sepreate"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/thr_login_qq"/>

        <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/thr_login_wechat"/>

    </LinearLayout>

</RelativeLayout>
